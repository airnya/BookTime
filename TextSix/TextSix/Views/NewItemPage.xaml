<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextSix.Views.NewItemPage"
             Title="ДОБАВЛЕНИЕ КНИГИ">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15" >
            <Label Text="Название книги" TextColor="PaleVioletRed"/>
            <Entry Text="{Binding Item.Text}"/>
            <Label Text="Автор книги" TextColor="PaleVioletRed"/>
            <Editor Text="{Binding Item.Description}"/>
            <Label Text="Дополнительно" TextColor="PaleVioletRed" />
            <Editor />
            <Button Text="ДОБАВИТЬ В БИБЛИОТЕКУ" Clicked="Save_Clicked" VerticalOptions="EndAndExpand" HeightRequest="100" TextColor="White" FontAttributes="Bold" BackgroundColor="PaleVioletRed"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>